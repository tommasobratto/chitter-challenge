<% if current_user %>
  Welcome <%= current_user.name %>
<% end %>

<ul>
  <% @messages.each do |message| %>
    <li> <%= message.content %> - <%= message.author %> </li>
  <% end %>
</ul>

<form id="new_message" action="/messages" method="post">
  <input type="text" name="content">
  <input type="submit" value="send">
</form>